{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Clusters": {
      "Admin": {
        "Destinations": {
          "Back": {
            "Address": "http://admin"
          }
        }
      },
      "Shell": {
        "Destinations": {
          "Back": {
            "Address": "http://shell"
          }
        }
      }
    },
    "Routes": {
      "Admin": {
        "ClusterId": "Admin",
        "Match": {
          "Path": "/api/admin/{*any}",
          "Methods" : ["GET", "POST", "PUT", "DELETE", "PATCH"]
        },
        "AuthorizationPolicy": "Default"
      },
      "Shell": {
        "ClusterId": "Shell",
        "Match": {
          "Path": "/api/{**remainder}",
          "Methods" : ["GET", "POST", "PUT", "DELETE", "PATCH"]
        },
        "AuthorizationPolicy": "Default"
      }
    }
  }
}
